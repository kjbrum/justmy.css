{
  "name": "Sprinkles.css",
  "version": "1.0.0",
  "description": "A starter CSS framework to make development more enjoyable.",
  "scripts": {
    "browsersync": "browser-sync start --server --files 'style.css, index.html'",
    "build": "npm run css:build",
    "css": "npm run css:watch",
    "css:autoprefix": "postcss --use autoprefixer --output style.css style.css",
    "css:build": "npm run css:compile && npm run css:autoprefix",
    "css:compile": "sass --style compressed sprinkles/sprinkles.scss > style.css",
    "css:watch": "watch 'npm run css:build' sprinkles",
    "dev": "parallelshell 'npm run watch' 'npm run browsersync'",
    "watch": "npm run css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kjbrum/sprinkles.css.js.git"
  },
  "author": "Kyle Brumm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kjbrum/sprinkles.css.js/issues"
  },
  "homepage": "https://github.com/kjbrum/sprinkles.css.js#readme",
  "devDependencies": {
    "autoprefixer": "latest",
    "node-sass": "latest",
    "parallelshell": "latest",
    "postcss-cli": "latest",
    "watch": "latest"
  }
}
